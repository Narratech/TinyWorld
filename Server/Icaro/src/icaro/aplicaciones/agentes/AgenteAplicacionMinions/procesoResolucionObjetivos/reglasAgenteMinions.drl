	f:Focus(foco == obj)
	arbol:ArbolObjetivos(listaIntegrantes != null)
then
// Al terminar se pasar√° al objetivo ResolverArbol
	Objetivo o = new ResolverArbol();
	o.setSolving();
	f.setFoco(o);
	
