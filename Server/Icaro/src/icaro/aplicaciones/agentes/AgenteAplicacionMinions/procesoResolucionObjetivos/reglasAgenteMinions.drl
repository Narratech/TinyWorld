rule "Iniciar encuestas"
when
	obj : ResolverArbol(state == Objetivo.SOLVING)
	f : Focus(foco == obj) 
	arbol : ArbolObjetivos()
	eval ( arbol.getListaIntegrantes().getJefeEncuestas().equals(agentId) && arbol.getNextPendingNode() != null ) 
	not ( exists ( ListaEncuestas() ) ) 
then
